# Files to compile
OBJS = *.cpp

# Executable name
OBJ_NAME = ../Windows/Iceberg3D_Demo

# Compiler being used
CC = g++ -std=c++11

# INCLUDE_PATHS specifies additional include paths
INCLUDE_PATHS= -IC:\SDL2-2.0.3\include

# LIBRARY PATHS specifies additional library paths
LIBRARY_PATHS= -L"C:\MinGW\lib"

# Compiler flags
COMPILER_FLAGS = -w -Wl,-subsystem,windows

# Linker flags
LINKER_FLAGS = -static-libgcc -static-libstdc++ -lmingw32 -lSDL2main -lSDL2 -lSDL2_image -lSDL2_ttf -lSDL2_mixer -lglew32 -lopengl32 -lglu32

# Target
all: $(OBJS)
	$(CC) $(OBJS) $(INCLUDE_PATHS) $(LIBRARY_PATHS) $(COMPILER_FLAGS) $(LINKER_FLAGS) -o $(OBJ_NAME)
